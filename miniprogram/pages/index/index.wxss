.input {
  margin-bottom: 50rpx;
  width: 80vw;
  height: 80rpx;
  border: 1px solid black;
  border-radius: 8rpx;
  padding-left: 10rpx;
}

.Intro {
  padding: 50rpx;
}

.image
{
  height: 80rpx;
  width: 200rpx;
  margin-bottom: 30rpx;
}

button::after {
  border: none;
}
button {
 background-color: #fff;
}

.share { 
  height: 140rpx;
  width: 140rpx;
  position: fixed;
  bottom: 170rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: rgba(0, 0, 0, .05);
  border-radius: 50%;
  z-index: 10;
} 
.share image {
  height: 60rpx;
  width: 60rpx;
}
.share text {
  color: #000;  
}
.share button {
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: 0.1;
  z-index: 99;
}

